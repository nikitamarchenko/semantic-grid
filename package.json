{
  "name": "semantic-grid",
  "scripts": {
    "setup:fm": "turbo run setup --filter fm-app",
    "setup:dbm": "turbo run setup --filter db-meta",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "@typescript-eslint/utils": "^8.41.0",
    "prettier": "^3.6.2",
    "turbo": "2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.2.10",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
